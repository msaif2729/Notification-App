<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionBarItemBackground">@color/colorPrimary</item>
        <item name="textFillColor">@color/white</item>
        <item name="textOutlineColor">@color/black</item>
    </style>

    <style name="LightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionBarItemBackground">@color/white</item>
        <item name="android:windowBackground">@color/offwhite</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="textFillColor">@color/black</item>
        <item name="textOutlineColor">@color/white</item>
    </style>


</resources>